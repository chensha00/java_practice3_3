    <!--<constant name="struts.convention.package.locators.basePackage" value="com.sunflower.actions"/>-->
    <!-- 用于配置类名后缀，默认为Action，设置后，Struts2只会去找这种后缀名的类做映射 -->
    <constant name="struts.convention.action.suffix" value="Action"/>
