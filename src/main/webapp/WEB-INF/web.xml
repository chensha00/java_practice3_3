<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <!--登陆页的servlet-->
    <servlet>
        <servlet-name>userAccountCollection</servlet-name>
        <servlet-class>controler.RegisterAccountCollection</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userAccountCollection</servlet-name>
        <url-pattern>*.do</url-pattern>
    </servlet-mapping>

  <!-- 用户页的servlet-->
    <servlet>
        <servlet-name>myShoppingServlet</servlet-name>
        <servlet-class>controler.MyShoppingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>myShoppingServlet</servlet-name>
        <url-pattern>/myshopping</url-pattern>
    </servlet-mapping>

  <!--付款的servlet-->
    <servlet>
        <servlet-name>PayServlet</servlet-name>
        <servlet-class>controler.PayServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PayServlet</servlet-name>
        <url-pattern>/pay</url-pattern>
    </servlet-mapping>

  <!--查询商品的servlet-->
    <servlet>
        <servlet-name>FindGoodsServlet</servlet-name>
        <servlet-class>controler.FindGoodsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FindGoodsServlet</servlet-name>
        <url-pattern>/findGoods</url-pattern>
    </servlet-mapping>
</web-app>
